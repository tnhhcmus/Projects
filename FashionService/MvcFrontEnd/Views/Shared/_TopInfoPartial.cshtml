@using MvcFrontEnd.BusinessObjects
@model ContactBOL

<div class="row-top">
    <div class="site-top-logo-responsive">
        <img src="~/Images/logo.png" />
    </div>
    <div class="site-top-info">
        <div class="site-logo">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                @Html.Raw(string.Format("<img src='{0}' />", Model.ImageUrl))
            }
            else
            {
                @Html.Raw("<img src=\"~/Images/logo-haanh.png\" />")
            }

        </div>

        <div class="phone-responsive">
            <p>Chuyên dạy các khóa cấp tốc ngắn hạn về mắt - môi - chân mày</p>
            <span style="color:#c5b5c3;">Địa chỉ: @Model.Address_VN</span>
            <a href="tel:@Model.Phone" style="padding-top: 0;"><i class="fa fa-phone-square"></i> <b> Hotline: @Model.Phone</b></a>
        </div>
    </div>
    
