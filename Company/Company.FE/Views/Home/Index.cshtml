<!-- blog -->
<div class="blog">
    <!-- container -->
    <div class="container">
        <div class="col-md-9 blog-top-left-grid">
            <div class="left-blog left-single">
                <div class="blog-left">
                    <div class="single-left-left Categories">
                        <h3>TUYỂN DỤNG TIÊU ĐIỂM</h3>
                    </div>
                    <div class="list-item-bg panel-list-job">
                        @if (topHotItems.Count == 0)
                        {
                            <span style="text-align: center; display: block; padding: 10px;">Đang cập nhật</span>
                        }
                        else
                        {
                            foreach (PostInfo item in topHotItems)
                            {
                                <div class="list-item">
                                    <div class="img-thumb">
                                        <img src="@Url.Action("Files", "Home", new { key = item.Images })" alt="@item.Title">
                                    </div>
                                    <span class="red pull-right"><i class=" glyphicon glyphicon-usd"></i><span>@item.GetWageString()</span></span>
                                    <a href="@Url.Action("Index", "Recruitment", new { key = item.ItemKey })" title="Bảo vệ làm việc tại KCN Tây Bắc, Củ Chi" class="name paddingtop5 green">
                                        @item.Title
                                        <img src="~/Assets/images/hot.gif" alt="việc làm hot" align="absmiddle">
                                    </a>
                                    <p class="description text-uppercase">
                                        <i class=" glyphicon glyphicon-hand-right"></i><a href="#" title=" Công ty bảo vệ Thanh Bình Phú Mỹ" class="company-name">@item.CompanyName</a>
                                        <i class="glyphicon glyphicon-time"></i>
                                        <small>@item.UpdatedAt.Value.ToString("dd-MM-yyyy")</small>
                                        <i class="glyphicon glyphicon-map-marker"></i>
                                        <small>
                                            @item.GetCompanyAddress()
                                        </small>
                                    </p>
                                </div>
                            }
                        }
                    </div>
                </div>

            </div>

            <div class="left-blog left-single" style="margin-top: 20px;">
                <div class="blog-left">
                    <div class="single-left-left Categories">
                        <h3>TUYỂN DỤNG MỚI NHẤT</h3>
                    </div>
                    <div class="list-item-bg panel-list-job">
                        @if (topPostItems.Count == 0)
                        {
                            <span style="text-align: center; display: block; padding: 10px;">Đang cập nhật</span>
                        }
                        else
                        {
                            foreach (PostInfo item in topPostItems)
                            {
                                <div class="list-item">
                                    <div class="img-thumb">
                                        <img src="@Url.Action("Files", "Home", new { key = item.Images })" alt="@item.Title">
                                    </div>
                                    <span class="red pull-right"><i class=" glyphicon glyphicon-usd"></i><span>@item.GetWageString()</span></span>
                                    <a href="@Url.Action("Index", "Recruitment", new { key = item.ItemKey })" title="Bảo vệ làm việc tại KCN Tây Bắc, Củ Chi" class="name paddingtop5 green">
                                        @item.Title
                                    </a>
                                    <p class="description text-uppercase">
                                        <i class=" glyphicon glyphicon-hand-right"></i><a href="#" title=" Công ty bảo vệ Thanh Bình Phú Mỹ" class="company-name">@item.CompanyName</a>
                                        <i class="glyphicon glyphicon-time"></i>
                                        <small>@item.UpdatedAt.Value.ToString("dd-MM-yyyy")</small>
                                        <i class="glyphicon glyphicon-map-marker"></i>
                                        <small>
                                            @item.GetCompanyAddress()
                                        </small>
                                    </p>
                                </div>
                            }
                        }
                    </div>
                </div>

            </div>
        </div>
        <div class="col-md-3 blog-top-right-grid">
            <div class="Categories">
                <h3>Khu Vực Tuyển Bảo Vệ</h3>
                <ul>
                    @foreach (DictionaryEntry entry in townItems)
                    {
                        <li>
                            @if (countItems[entry.Key] != null)
                            {
                                <a href="@Url.Action("Index", "Town", new { key = entry.Key.ToString() })">@Html.Raw(entry.Value.ToString() + " (" + countItems[entry.Key].ToString() + ")")</a>
                            }
                            else
                            {
                                <a href="@Url.Action("Index", "Town", new { key = entry.Key.ToString() })">@entry.Value.ToString()</a>
                            }
                        </li>
                    }
                </ul>
            </div>
